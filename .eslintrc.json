{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
    // "parser": "babel-eslint"
  },
  "plugins": ["react"],
  "rules": {
    "indent": "off",
    // [
    // "warn",
    // 2,
    // { "ignoredNodes": ["TemplateLiteral"], "SwitchCase": 1 }
    // ]
    "template-curly-spacing": "off",
    "no-unused-vars": "warn",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "react/prop-types": 0,
    "semi": ["error", "always"]
  }
}
